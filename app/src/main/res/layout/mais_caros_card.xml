<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="6dp"
    android:paddingLeft="16dp"
    android:paddingRight="16dp">

    <android.support.v7.widget.CardView
        android:id="@+id/cvSingleUser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="12dp">

            <TextView
                android:id="@+id/nomePerfil"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="AAAA"
                android:textSize="15sp"

                />

            <TextView
                android:id="@+id/nomeAparelho"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_below="@+id/nomePerfil"
                android:padding="5dp"
                android:text="Geladeira" />

            <TextView
                android:id="@+id/txtValorKwh"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_alignTop="@+id/nomeAparelho"
                android:padding="5dp"
                android:text="R$ 200,00 / 163 Kwh" />


        </RelativeLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>